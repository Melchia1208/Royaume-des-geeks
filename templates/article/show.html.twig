{% extends 'base.html.twig' %}

{% block title %}Article {{ article.id }}{% endblock %}

{% block body %}

    <div class="article" style="background-color: lightgray;" >

        <div class="row mx-2">

            <div class="row">

                <div class="col">
                    <div class="card-body">
                        <h1 class="card-title  mt-5">{{ article.title }}</h1>
                        <h3 class="card-text">{{ article.subtitle }}</h3>

                    </div>
                </div>
                <div class="col-4 mr-4 mt-3">
                    <img class="card-img" src="/assets/uploads/{{ article.image }}" alt="Card image cap" width="auto">
                </div>
            </div>
        </div>
        <div style="margin: 5%;">
            {{ article.body | raw}}
        </div>
        <br>
        {% if article.videolink != null %}
            <div align="center">
                <iframe width="560" height="315" src="{{ videotab[0] }}embed/{{ videotab[1] }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        {% endif %}
    </div>
{% endblock %}
